---
const { title, desc, image, color } = Astro.props;
import { Image } from "astro:assets";
---

<div class="feature-card">
  <div class="feature-text">
    <h3 style={`color: ${color};`}>{title}</h3>
    <p>{desc}</p>
  </div>
  <div class="feature-image">
    <Image src={image} loading="lazy" alt="Mythic feature" />
  </div>
</div>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--secondary-nav-color);
    padding: 20px;
    border-radius: 16px;
    text-align: center;
    margin-bottom: 20px;
    height: 100%;
  }

  .feature-image {
    width: 100%;
    height: auto;
  }

  .feature-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .feature-text h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .feature-text p {
    font-size: 1rem;
    max-width: 80%;
    margin: 0 auto;
  }

  .feature-text {
    padding-bottom: 24px;
  }
</style>
