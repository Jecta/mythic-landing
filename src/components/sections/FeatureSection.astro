---
const { title, desc, image, color } = Astro.props;
import { Image } from "astro:assets";
---

<div class="feature">
  <h3 style=`color: ${color};`>{title}</h3>
  <p>{desc}</p>
  <Image src={image} loading="lazy" alt="Mythic logo" />
</div>

<style>
  .feature {
    margin-top: 20px;
    margin-bottom: 20px;
    border-radius: 16px;
    padding: 20px;
    background-color: var(--secondary-nav-color);
    text-align: left;
    align-items: center;
  }

  .feature p {
    max-width: 50%;
  }

  .feature img {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 500px;
  }
</style>
