---
import { Icon } from 'astro-icon/components'
---

<nav>
  <a href="/"><h1 class="logo">Mythic</h1></a>
  <div class="right-items">
    <a href="/docs">Docs</a>
    <a href="/roadmap" target="_blank">Roadmap</a>
    <a href="/faq">FAQ</a>
    <a aria-label="discord" href="/discord"><Icon size={21} name="ic:baseline-discord" /></a>
    <a class="button" href="/download"> Download </a>
  </div>
</nav>

<style>
  nav {
    z-index: 100;
    display: flex;
    height: 52px;
    width: 100%;
    font-size: 12px;
    align-items: center;
    position: fixed;
    top: 0;
    background-color: var(--navbar-color);
    backdrop-filter: blur(4px);
    border-bottom: 1px solid var(--stroke);
  }

  .logo {
    font-family: var(--pro-display);
    font-weight: 500;
    font-size: 21px;
    color: var(--secondary-color);
    padding-left: 100px;
  }

  .right-items {
    align-items: center;
    display: flex;
    margin-left: auto;
    gap: 25px;
    padding-right: 100px;
  }

  @media only screen and (max-width: 903px) {
    .logo {
      padding-left: 20px;
      font-size: 18px;
    }

    .right-items {
      padding-right: 20px;
    }
  }

  @media only screen and (max-width: 480px) {
    .logo {
      padding-left: 10px;
      font-size: 16px;
    }

    .right-items {
      padding-right: 10px;
      gap: 10px;
    }
  }
</style>
